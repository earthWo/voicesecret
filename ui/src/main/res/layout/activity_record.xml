<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawable_main_background">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:src="@drawable/ui_back"
        android:onClick="back"/>

    <win.whitelife.view.VoiceShowView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        android:layout_margin="30dp"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:src="@drawable/drawable_toggle_record"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="record"/>

    <ImageView
        android:id="@+id/iv_stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/iv_record"
        android:src="@drawable/drawable_toggle_stop"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_record"
        app:layout_constraintTop_toTopOf="@id/iv_record"
        android:onClick="stop"/>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toLeftOf="@id/iv_record"
        android:src="@drawable/drawable_toggle_play"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_record"
        app:layout_constraintTop_toTopOf="@id/iv_record"
        android:onClick="play"/>

</android.support.constraint.ConstraintLayout>

